# => (bar) i3status-rust
#"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""" 

bar {
    font pango:DejaVu Sans Mono, FontAwesome 10
    position top
    status_command /usr/bin/i3status-rs /home/doni/.config/i3status-rs/config.toml
    colors {
        separator #FFFFFF
        background #000000
        statusline #2111E7
        focused_workspace #2111E7 #2111E7 #2111E7
        active_workspace #FE0707 #FE0707 #2111E7
        inactive_workspace #ECE20E #333333 #ECE20E
        urgent_workspace #2f343a #900000 #2f343a
    }
}

