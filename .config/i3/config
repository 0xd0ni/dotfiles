#""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
# => screenshots
#""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""

bindsym Print exec --no-startup-id maim "/home/doni/Pictures/$(date).png"
bindsym $mod+Print exec --no-startup-id maim --window $(xdotool getactivewindow) "/home/doni/Pictures/$(date).png"
bindsym Shift+Print exec --no-startup-id maim --select "/home/doni/Pictures/$(date).png"

#""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
# => Clipboard Screenshots
#""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""

bindsym Ctrl+Print exec --no-startup-id maim | xclip -selection clipboard -t image/png
bindsym Ctrl+$mod+Print exec --no-startup-id maim --window $(xdotool getactivewindow) | xclip -selection clipboard -t image/png
bindsym Ctrl+Shift+Print exec --no-startup-id maim --select | xclip -selection clipboard -t image/png

#""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
# => gaps
#""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""

for_window [class=" .*"] border pixel 0
gaps inner 15
gaps outer 1
smart_gaps on

